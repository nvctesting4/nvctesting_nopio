  <script>
    document.addEventListener('DOMContentLoaded', function () {
      const btn = document.getElementById('subBtn');

      btn.addEventListener('click', () => {
        if (window.AhrefsAnalytics) {
          window.AhrefsAnalytics.sendEvent('subpage_button_click');
        }
      });
    });
  </script>
